{
  "name": "@mentormate/node-cli",
  "version": "1.0.2",
  "description": "Node CLI",
  "repository": {
    "url": "https://github.com/MentorMate/node-project-cli"
  },
  "license": "MIT",
  "bin": {
    "node-cli": "bin/node-cli"
  },
  "files": [
    "assets",
    "src",
    "docs",
    "bin"
  ],
  "scripts": {
    "format": "prettier \"**/*.js\" --write --cache --cache-strategy metadata --cache-location .prettiercache",
    "lint": "eslint \"**/*.js\" --fix --cache",
    "prepare": "husky install",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "gluegun": "^5.1.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.2",
    "commitlint": "^17.4.2",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^8.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8",
    "sort-package-json": "^2.4.1"
  }
}
