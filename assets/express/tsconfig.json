{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@api": [
        "src/api"
      ],
      "@services": [
        "src/services"
      ],
      "@common": [
        "src/common"
      ],
      "@entities": [
        "src/entities"
      ],
      "@middleware": [
        "src/middleware"
      ],
      "@database": [
        "src/database"
      ],
      "@global-test-helpers/*": [
        "test/*"
      ]
    } 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.*",
    "**/*.test.*"
  ]
}

