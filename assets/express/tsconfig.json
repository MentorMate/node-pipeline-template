{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@api-v1/*": [
        "src/api/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@common": [
        "src/common"
      ],
      "@entities": [
        "src/entities"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@guards/*": [
        "src/guards/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ],
      "@global-test-helpers/*": [
        "test/*"
      ]
    } 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.*",
    "**/*.test.*"
  ]
}

