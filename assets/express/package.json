{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && tsc --build && tsc-alias",
    "build:watch": "concurrently --kill-others \"tsc -w\" \"tsc-alias -w\"",
    "clean": "rimraf dist",
    "format": "prettier \"**/*.{js,cjs,mjs,ts}\" --write --cache --cache-strategy metadata --cache-location .prettiercache",
    "image:build": "DOCKER_BUILDKIT=1 docker build -t todo-app-2 .",
    "image:run": "docker run --rm --net host --env-file .env todo-app-2",
    "initsecrets": "scripts/detect-secrets.sh",
    "lint": "eslint . --ext .js,.cjs,.mjs,.ts --fix --cache",
    "prepare": "husky install",
    "start": "npm run build:watch & tsc -w & nodemon -r dotenv/config ./dist/index.js",
    "test": "jest"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-terminator": "^3.2.0",
    "jsonwebtoken": "^9.0.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.3",
    "@ls-lint/ls-lint": "^1.11.2",
    "@tsconfig/recommended": "^1.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "commitizen": "^4.3.0",
    "commitlint": "^17.4.3",
    "concurrently": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "shellcheck": "^2.2.0",
    "sort-package-json": "^2.4.1",
    "ts-jest": "^29.0.5",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.9.5"
  }
}
