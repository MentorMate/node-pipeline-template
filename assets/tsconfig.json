{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "lib": ["ES2021"],
    "paths": {
      "@api-v1/*": ["src/api/*"],
      "@database/*": ["src/database/*"],
      "@guards/*": ["src/guards/*"],
      "@helpers/*": ["src/helpers/*"],
      "@global-test-helpers/*": ["test/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.*", "**/*.test.*"],
  "ts-node": {
    "files": true
  }
}
