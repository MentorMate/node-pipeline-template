{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@api": [
        "src/api"
      ],
      "@modules": [
        "src/modules"
      ],
      "@common": [
        "src/common"
      ],
      "@database": [
        "src/database"
      ]
    }, 
    "skipLibCheck": false,
    "lib": ["ES2021"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.*", "**/*.test.*"],
  "ts-node": {
    "files": true
  }
}


